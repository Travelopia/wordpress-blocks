{
  "name": "travelopia/wordpress-blocks",
  "type": "wordpress-plugin",
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.8",
    "phpstan/phpstan": "^1.10",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "scripts": {
    "set-coding-standards": "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcsstandards/phpcsutils,vendor/phpcsstandards/phpcsextra",
    "post-install-cmd": "[ $COMPOSER_DEV_MODE -eq 0 ] || composer run set-coding-standards",
    "post-update-cmd": "[ $COMPOSER_DEV_MODE -eq 0 ] || composer run set-coding-standards",
    "lint": "phpcs",
    "static-analysis": "phpstan analyse -c phpstan.neon --memory-limit=512M"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
