{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "travelopia/table",
  "title": "Table",
  "description": "Create structured content in rows and columns to display information.",
  "category": "text",
  "textdomain": "tp",
  "supports": {
    "anchor": true,
    "className": true,
    "customClassName": true,
    "html": false,
    "alignWide": false
  },
  "providesContext": {
    "travelopia/table-id": "blockId",
    "travelopia/table-total-rows": "rows",
    "travelopia/table-total-columns": "columns",
    "travelopia/table-has-thead": "hasThead",
    "travelopia/table-has-tfoot": "hasTfoot"
  },
  "attributes": {
    "anchor": {
      "type": "string",
      "default": ""
    },
    "rows": {
      "type": "number",
      "default": 0
    },
    "columns": {
      "type": "number",
      "default": 0
    },
    "blockId": {
      "type": "string",
      "default": ""
    },
    "hasThead": {
      "type": "boolean",
      "default": false
    },
    "hasTfoot": {
      "type": "boolean",
      "default": false
    }
  }
}
